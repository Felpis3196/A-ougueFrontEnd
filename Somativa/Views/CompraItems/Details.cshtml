@model Somativa.Models.CompraItem

@{
    ViewData["Title"] = "Details";
}

<div class="container container-fluid">
    <h4>Detalhes da Venda</h4>
    <hr />
    <div class="row  justify-content-center align-content-center text-center">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Compra)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Compra.CompraId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Produto)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Produto.Nome)
                </dd>
            </dl>
        </div>
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Quantidade)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quantidade)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Unitario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Unitario)
                </dd>
            </dl>
        </div>
    </div>
    <div class="text-center">
        <a asp-action="Edit" asp-route-id="@Model?.CompraItemId"><svg bootstrap-icon="PencilFill" width="24" height="24" aria-label="Voltar" class="text-primary"></svg></a>
        <a asp-controller="VendaItems" asp-action="Index" asp-route-id=@Model.CompraId><svg bootstrap-icon="ArrowReturnLeft" width="24" height="24" aria-label="Voltar" class="text-danger"></svg></a>
    </div>
</div>