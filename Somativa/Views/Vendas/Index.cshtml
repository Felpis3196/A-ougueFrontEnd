@model IEnumerable<Somativa.Models.Venda>

@{
    ViewData["Title"] = "Index";
}

<div class="row container-fluid">
    <div class="col-12 col-sm-12 col-md-12 col-lg-3 text-center">
        <h1>Vendas</h1>
        <p>
            <a asp-action="Create" class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Requer Cargo de Operador">
                Adicionar Venda <span class="badge text-bg-warning"><svg bootstrap-icon="CashStack" width="24" height="24" aria-label="Categorias" class="bg-warning text-white rounded-circle p-1"></svg></span>
            </a>
        </p>
    </div>
    <div class="col table-responsive">
        <table class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nota)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cliente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataHora)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nota)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cliente.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataHora)
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.VendaId"><svg bootstrap-icon="PencilSquare" width="32" height="32" aria-label="Editar" class="text-primary p-1"></svg></a>
                            <a asp-action="Details" asp-route-id="@item.VendaId"><svg bootstrap-icon="InfoCircleFill" width="32" height="32" aria-label="Detalhes" class="text-warning p-1"></svg></a>
                            <a asp-action="Delete" asp-route-id="@item.VendaId"><svg bootstrap-icon="TrashFill" width="32" height="32" aria-label="Apagar" class="text-danger  p-1"></svg></a>
                            <a asp-controller="VendaItems" asp-action="Index" asp-route-id="@item.VendaId"><svg bootstrap-icon="Bag" width="32" height="32" aria-label="Apagar" class="text-success  p-1"></svg></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

