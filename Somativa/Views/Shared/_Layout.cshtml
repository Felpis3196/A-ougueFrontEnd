<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Somativa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Somativa.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#433d3d;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo-lin-crop.png" style="height:80px; width:110px" class="img-fluid p-2"/></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item fs-5">
                            <a class="nav-link text-white" asp-area="" asp-controller="Clientes" asp-action="Index">
                                <span class="d-inline-block d-md-none d-lg-inline-block">Clientes</span>
                                <svg bootstrap-icon="PersonFill" width="20" height="20" aria-label="Cliente" class="bg-warning text-white rounded-circle p-1"></svg>
                            </a>
                        </li>
                        <li class="nav-item fs-5">
                            <a class="nav-link text-white" asp-area="" asp-controller="Fornecedores" asp-action="Index">
                                <span class="d-inline-block d-md-none d-lg-inline-block">Fornecedores</span>
                                <svg bootstrap-icon="Truck" width="20" height="20" aria-label="Categorias" class="bg-warning text-white rounded-circle p-1"></svg>
                            </a>
                        </li>
                        <li class="nav-item fs-5">
                            <a class="nav-link text-white" asp-area="" asp-controller="Categorias" asp-action="Index">
                                <span class="d-inline-block d-md-none d-lg-inline-block">Categorias</span>
                                <svg bootstrap-icon="TagsFill" width="20" height="20" aria-label="Categorias" class="bg-warning text-white rounded-circle p-1"></svg>
                            </a>
                        </li>
                        <li class="nav-item fs-5">
                            <a class="nav-link text-white" asp-area="" asp-controller="Produtos" asp-action="Index">
                                <span class="d-inline-block d-md-none d-lg-inline-block">Produtos</span>
                                <svg bootstrap-icon="List" width="20" height="20" aria-label="Categorias" class="bg-warning text-white rounded-circle p-1"></svg>
                            </a>
                        </li>
                        <li class="nav-item fs-5">
                            <a class="nav-link text-white" asp-area="" asp-controller="Vendas" asp-action="Index">
                                <span class="d-inline-block d-md-none d-lg-inline-block">Vendas</span>
                                <svg bootstrap-icon="CashStack" width="20" height="20" aria-label="Categorias" class="bg-warning text-white rounded-circle p-1"></svg>
                            </a>
                        </li>
                        <li class="nav-item fs-5">
                            <a class="nav-link text-white" asp-area="" asp-controller="Compras" asp-action="Index">
                                <span class="d-inline-block d-md-none d-lg-inline-block">Compras</span>
                                <svg bootstrap-icon="Basket2Fill" width="20" height="20" aria-label="Categorias" class="bg-warning text-white rounded-circle p-1"></svg>
                            </a>
                        </li>
                        <li class="nav-item">
                            <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                                <ul class="navbar-nav">
                                    <li class="nav-item dropdown fs-5">
                                        <button class="btn dropdown-toggle text-white fs-5" data-bs-toggle="dropdown" aria-expanded="false">
                                            Relatórios 
                                        </button>
                                        <ul class="dropdown-menu fs-6">
                                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Relatorio" asp-action="RelatProd">Relatório de produtos</a></li>
                                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Relatorio" asp-action="RelatMov">Relatório de movimentações</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark text-center">
        <div class="container text-white">
            <span class="text-warning">&copy;</span> 2023 - Todos Direitos a Linguiça
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
