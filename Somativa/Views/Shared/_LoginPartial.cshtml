@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.UI.V5.Pages.Account.Internal;
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Olá, @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white"><svg bootstrap-icon="BoxArrowInLeft" width="24" height="24" aria-label="Alarms"></svg></button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark text-white" asp-area="Identity" asp-page="/Account/Register">Não Tem Conta Ainda?<br><span class="text-primary text-decoration-underline">Crie</span></a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark text-white" asp-area="Identity" asp-page="/Account/Login"><svg bootstrap-icon="BoxArrowInRight" width="24" height="24" aria-label="Alarms"></svg></a>
        </li>
    }
</ul>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
